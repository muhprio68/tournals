<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfilFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rlEdit1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar
                android:id="@+id/editProfilToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/merahApp">
                <TextView
                    android:id="@+id/editProfilTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/profil"
                    android:textColor="@color/putih"
                    style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"/>
            </android.support.v7.widget.Toolbar>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlEdit2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_below="@id/rlEdit1">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fotoProfil"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:src="@drawable/foto"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true" />

            <Button
                android:id="@+id/btnGantiFoto"
                android:layout_width="215dp"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="153dp"
                android:background="@drawable/btn_circle_merah"
                android:text="@string/ganti_foto_profil"
                android:textAllCaps="false"
                android:textColor="@color/putih"
                android:textSize="12sp" />
            <EditText
                android:id="@+id/edtNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="nama"
                android:layout_above="@id/edtEmail"
                android:textSize="12sp"
                android:textColorHint="@color/merahApp"
                android:textColor="@color/merahApp"
                android:inputType="textPersonName"
                android:backgroundTint="@color/merahApp"/>

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/edtTTL"
                android:hint="email"
                android:textSize="12sp"
                android:textColorHint="@color/merahApp"
                android:textColor="@color/merahApp"
                android:inputType="textEmailAddress"
                android:backgroundTint="@color/merahApp"/>

            <EditText
                android:id="@+id/edtTTL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="tanggal lahir"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:textColorHint="@color/merahApp"
                android:textColor="@color/merahApp"
                android:inputType="date"
                android:backgroundTint="@color/merahApp"/>

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtTTL"
                android:hint="password"
                android:textSize="12sp"
                android:textColorHint="@color/merahApp"
                android:textColor="@color/merahApp"
                android:inputType="textPassword"
                android:backgroundTint="@color/merahApp"/>

            <EditText
                android:id="@+id/edtConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtPassword"
                android:hint="konfirmasi password"
                android:textSize="12sp"
                android:textColorHint="@color/merahApp"
                android:textColor="@color/merahApp"
                android:inputType="textPassword"
                android:backgroundTint="@color/merahApp"/>
            <Button
                android:id="@+id/btnEditProfil"
                android:layout_width="157dp"
                android:layout_height="32dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="100dp"
                android:background="@drawable/btn_circle_merah"
                android:text="Selesai"
                android:textAllCaps="false"
                android:textColor="@color/putih"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnBatal"
                android:layout_width="157dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="100dp"
                android:background="@drawable/btn_circle_kuning"
                android:text="Batal"
                android:textAllCaps="false"
                android:textColor="@color/putih"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>