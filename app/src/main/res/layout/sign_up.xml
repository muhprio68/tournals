<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@drawable/gradient"
    >
    <!--tools:context=".MainActivity"-->
    <TextView
        android:id="@+id/tvTournals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tournals"
        android:textSize="42sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="159dp"
        android:textColor="@color/putih"/>
    <TextView
        android:id="@+id/tvmake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/make_your_own_tour_journal"
        android:layout_below="@+id/tvTournals"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/putih"/>
    <EditText
        android:id="@+id/edtNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:hint="nama"
        android:textSize="12sp"
        android:textColorHint="@color/putih"
        android:backgroundTint="@color/putih"
        android:textColor="@color/putih"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtNama"
        android:hint="email"
        android:textSize="12sp"
        android:textColorHint="@color/putih"
        android:backgroundTint="@color/putih"
        android:textColor="@color/putih"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/edtTTL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtEmail"
        android:hint="tanggal lahir"
        android:textSize="12sp"
        android:textColorHint="@color/putih"
        android:backgroundTint="@color/putih"
        android:textColor="@color/putih"
        android:inputType="date"/>

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtTTL"
        android:backgroundTint="@color/putih"
        android:hint="password"
        android:textSize="12sp"
        android:textColorHint="@color/putih"
        android:textColor="@color/putih"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/edtConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtPassword"
        android:hint="konfirmasi password"
        android:textSize="12sp"
        android:backgroundTint="@color/putih"
        android:textColorHint="@color/putih"
        android:textColor="@color/putih"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btnDaftar"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:textSize="12sp"
        android:text="@string/daftar"
        android:layout_below="@id/edtConfirm"
        android:background="@drawable/btn_circle_merah"
        android:textColor="@color/putih"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnGoogle"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:textSize="12sp"
        android:text="@string/daftar_dengan_google"
        android:layout_below="@id/btnDaftar"
        android:background="@drawable/btn_circle_putih"
        android:textColor="@color/hitam"
        android:textAllCaps="false"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/ic_icons8_google"
        android:paddingLeft="8dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/sudah_punya_akun"
        android:textAllCaps="false"
        android:textColor="@color/putih"
        android:layout_marginBottom="7dp"/>
</RelativeLayout>