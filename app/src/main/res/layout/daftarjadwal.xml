<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:layout_marginBottom="1dp"
    android:background="@color/putih"
    android:outlineAmbientShadowColor="@color/hitam"
    android:outlineSpotShadowColor="@color/hitam"
    android:id="@+id/rlRencana"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">
    <TextView
        android:id="@+id/tvNamaRencana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:textSize="16sp"
        fontPath="fonts/Raleway-Regular.ttf"
        tools:ignore="MissingPrefix"/>

    <TextView
        android:id="@+id/tvTanggalMulai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_below="@+id/tvNamaRencana"
        android:textColor="@color/text"
        android:layout_alignParentLeft="true"
        fontPath="fonts/Raleway-Regular.ttf"
        tools:ignore="MissingPrefix"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_delete_black"/>
</RelativeLayout>