<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/profilToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">
            <TextView
                android:id="@+id/profilTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/profil"
                fontPath="fonts/Raleway-Regular.ttf"
                tools:ignore="MissingPrefix"
                android:textColor="@color/putih"
                style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"/>
        </android.support.v7.widget.Toolbar>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/profilToolbar"
            android:layout_marginBottom="72dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fotoProfil"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/foto"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/tvNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alicia Westburn"
            android:layout_marginTop="10dp"
            android:textSize="28sp"
            fontPath="fonts/Raleway-Regular.ttf"
            tools:ignore="MissingPrefix"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/fotoProfil"/>
        <TextView
            android:id="@+id/tvTempat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            fontPath="fonts/Raleway-Regular.ttf"
            tools:ignore="MissingPrefix"
            android:text="Malang, Indonesia"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tvNama"/>

        <Button
            android:id="@+id/btnEditProfil"
            android:layout_width="215dp"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_circle_kuning"
            android:text="Edit Profil"
            fontPath="fonts/Raleway-Regular.ttf"
            tools:ignore="MissingPrefix"
            android:layout_marginTop="16dp"
            android:textAllCaps="false"
            android:layout_below="@id/tvTempat"
            android:textColor="@color/putih"
            android:textSize="12sp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"/>

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="215dp"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_circle_merah"
            android:text="Logout"
            fontPath="fonts/Raleway-Regular.ttf"
            tools:ignore="MissingPrefix"
            android:layout_marginTop="16dp"
            android:textAllCaps="false"
            android:textColor="@color/putih"
            android:textSize="12sp"
            android:layout_below="@+id/btnEditProfil"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"/>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</FrameLayout>